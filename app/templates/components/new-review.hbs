{{#if addNewReview}}
<h1>New Review</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        {{input value=rating id="rating" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" class="form-control"}}
      </div>
      <button {{action 'saveReview'}} class="btn btn-success">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'reviewFormShow'}} class="btn btn-default">New Review</button>
{{/if}}
